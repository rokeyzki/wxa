/* font */
#body {
  font-size: 14pt;

  /* test */
  height: 2000px;
}

/* 头部导航条 */
.flex-box {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: flex-end;

  position: fixed;
  top: 0;
  width: 20rem;
  height: 2em;
  z-index: 2;

  background-color: #495057;
  color: #fff;
  box-shadow: 0 0 1em #495057;
}

.flex-item {
  width: auto;
}

.text-box {
  display: inline-block;
  padding: 0 0.5em 0.7em;
}

.text-box.active {
  padding: 0 0.5em 0.5em;
  border-bottom: 0.2em solid #fff;
}

/* 轮播图 */
.swiper {
  background-color: black;
  margin-top: 2em;
  height: 12rem;
}

.slide-image {
  width: 20rem;
  height: 12rem;
}

/* 横向可滑动导航条 */
.scroll-view {
  white-space: nowrap;
}

.scroll-view-item {
  display: inline-block;
}

.item-text-box {
  margin: auto 1em;
  padding: 0.2em;
}

.item-text-box.active {
  margin: auto 1em;
  padding: 0.2em;
  border-bottom: 0.2em solid #495057;
}

/* 方格区块 */
.flex-block-box {
  display: flex;
  align-content: stretch;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: stretch;
}

.flex-block-item {
  box-sizing: border-box;
  width: 10rem;
  border-bottom: 0.1em solid #dee2e6;
}

.flex-block-item:nth-of-type(odd) {
  border-right: 0.1em solid #dee2e6;
}

.flex-block-item:nth-of-type(1), .flex-block-item:nth-of-type(2) {
  border-top: 0.1em solid #dee2e6;
}

.block-content {
  text-align: center;
}

.block-content-image {
  width: 100%;
  height: 10rem;
}

.block-content-text {
  padding-top: 0.5em;

  font-size: 0.8em;
  color: #868e96;
}

.block-content-price {
  padding-bottom: 0.5em;

  color: #ff6b6b;
}